<h2 class="mb-4">Available Courses</h2>
        <div class="row">
            <% courses.forEach(function(course) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="course-card">
                        <h3 class="h5 mb-3"><%= course.name %></h3>
                        <p class="text-muted mb-2">
                            <i class="fas fa-user me-2"></i>Educator: <%= course.educatorName %>
                        </p>
                        <div class="course-stats">
                            <span class="stat-item">
                                <i class="fas fa-users me-2"></i><%= course.enrollments %> Enrollments
                            </span>
                        </div>
                        <div class="d-flex gap-2 mt-3">
                            <button class="btn btn-primary btn-course">
                                <i class="fas fa-eye me-2"></i>View Course
                            </button>
                            <button class="btn btn-outline-primary btn-course">
                                <i class="fas fa-user-plus me-2"></i>Enroll
                            </button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>